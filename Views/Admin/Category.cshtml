@model CategoryViewModel
@{
    Layout = "_LayoutAdmin";
}

<div class="row h-100 bg-light">
    @await Component.InvokeAsync("AdminSidebar")
    <div class="col-7 col-sm-8 col-md-9 col-lg-10">
        <!-- add category form start-->
        <div class="row justify-content-center">
            <form class="w-50" method="post">
                <table class="table">
                    <tr>
                        <td><input type="text" name="categoryName" class="form-control form-control-md"></td>
                        <td><button type="submit" class="btn btn-info w-100">Ekle</button></td>
                    </tr>
                </table>
            </form>
        </div>
        <!-- add category form end-->
        
        <!-- category list start-->
        <div class="row justify-content-center mt-2">
            <table class="table table-striped table-dark w-50 table-sm rounded">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Kategori ismi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.categories)
                    {
                        <tr>
                            <td scope="row">
                                <strong class="ml-2">@item.CategoryName</strong>
                                <span class="float-right mr-1">
                                    <a class="btn btn-danger" href="/Admin/CategoryDelete/@item.CategoryID">Sil</a>
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
                
            </table>
            
        </div>
        <div class="row justify-content-center">
                <p class="h6 text-danger">Dikkat kategori silindiÄŸinde kategoriye ait makalelerde silinir !</p>
        </div>
        <!-- category list end-->
    </div>
</div>